package main.java.com.epapyrus.gayeong.charset;

import java.io.*;

public class CharacterEncoder {

    private final String FILEPATH = "./src/main/java/com/epapyrus/gayeong/charset/";
    private final String 

    //1-1. euc-kr
    public void convert(String charset) {
        try {
            //파일 입력
            FileInputStream fileInputStream = new FileInputStream(FILEPATH+"utf-8.contents.txt");
            InputStreamReader inputStreamReader = new InputStreamReader(fileInputStream, "utf-8");
            BufferedReader bufferedReader = new BufferedReader(inputStreamReader);

            String line = bufferedReader.readLine();

            //파일 출력
            FileOutputStream fileOutputStream = new FileOutputStream(FILEPATH+charset+".txt");
            OutputStreamWriter outputStreamWriter = new OutputStreamWriter(fileOutputStream, charset);
            BufferedWriter bufferedWriter = new BufferedWriter(outputStreamWriter);

            while(true) {
                if(line==null) break;
                bufferedWriter.write(line);
            }

        } catch (IOException e) {
            e.printStackTrace();
        } finally {
            try {
                if (bufferedReader != null) bufferedReader.close();
                if (fileReader != null) fileReader.close();
            } catch (IOException e) {
                e.printStackTrace();
            }
        }
    }

    //1-2. iso-8859-1


    //2. broken-iso-8859-1


    //3.
}
